{
  "name": "vs-writer",
  "displayName": "VS Writer",
  "description": "Collaborative AI writing assistant using HTML comment syntax",
  "version": "0.0.1",
  "publisher": "Clay-Ferguson",
  "repository": {
    "type": "git",
    "url": "https://github.com/Clay-Ferguson/vs-writer"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "vs-writer.writer",
        "name": "writer",
        "description": "Collaborative AI Writer that fills in <!-- a --> sections based on <!-- p --> sections.",
        "isSticky": true,
        "commands": [
          {
            "name": "fill",
            "description": "Fill the current AI section based on the preceding paragraph."
          },
          {
            "name": "verify",
            "description": "Verify that the AI section contains all key details from the P section."
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "vs-writer.insertTemplate",
        "title": "Writer: Insert Block Template"
      },
      {
        "command": "vs-writer.generate",
        "title": "Generate",
        "category": "VS Writer"
      },
      {
        "command": "vs-writer.verify",
        "title": "Verify",
        "category": "VS Writer"
      },
      {
        "command": "vs-writer.removePSections",
        "title": "Remove P-Sections"
      },
      {
        "command": "vs-writer.removeASections",
        "title": "Remove A-Sections"
      },
      {
        "command": "vs-writer.hidePSections",
        "title": "Hide P-Sections"
      },
      {
        "command": "vs-writer.hideASections",
        "title": "Hide A-Sections"
      },
      {
        "command": "vs-writer.addToContext",
        "title": "Add File To Context"
      }
    ],
    "submenus": [
      {
        "id": "vs-writer.submenu",
        "label": "VS Writer"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "vs-writer.submenu",
          "group": "1_modification",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "submenu": "vs-writer.submenu",
          "group": "modification"
        }
      ],
      "vs-writer.submenu": [
        {
          "command": "vs-writer.generate",
          "group": "1_modification@1",
          "when": "editorTextFocus"
        },
        {
          "command": "vs-writer.verify",
          "group": "1_modification@2",
          "when": "editorTextFocus"
        },
        {
          "command": "vs-writer.removePSections",
          "group": "2_remove",
          "when": "!editorTextFocus"
        },
        {
          "command": "vs-writer.removeASections",
          "group": "2_remove",
          "when": "!editorTextFocus"
        },
        {
          "command": "vs-writer.hidePSections",
          "group": "3_hide",
          "when": "!editorTextFocus"
        },
        {
          "command": "vs-writer.hideASections",
          "group": "3_hide",
          "when": "!editorTextFocus"
        },
        {
          "command": "vs-writer.addToContext",
          "group": "4_context",
          "when": "!editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-resources",
    "copy-resources": "mkdir -p out/prompts && cp src/prompts/*.md out/prompts/",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0"
  }
}
